    	<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    	<link rel="icon" href="/images/favicon.ico" type="image/x-icon" /> 
    	<link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
    	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    	<link href="https://fonts.googleapis.com/css?family=Raleway:400,700" rel="stylesheet" >
    	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    	<link rel="stylesheet" href="/stylesheets/main.css" />
    	<script src="/javascripts/main.js" type="text/javascript"></script>
    </head>
    
    <body>
    
        <div class="container dmHeader">
        	<nav class="navbar navbar-default navbar-fixed-top">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#"><i class="fas fa-sitemap fa-lg"></i> DM</a>
                </div>
    
            <!-- Main Navigation Bar -->
                <div class="myNavbar">
                    <ul class="nav navbar-nav">
                    	<li class="nav-item"><a class="nav-link" href="/">Search</a></li>
                        <li class="dropdown dark-menu">
                            <a href="#" data-toggle="dropdown" role="button">New</a>
                            <ul class="dropdown-menu">
                                <li><a href="/mprns"><i class="fas fa-tachometer-alt"></i>&nbsp;&nbsp;Meter Point</a></li>
                                <li><a href="/tickets"><i class="fas fa-ticket-alt"></i>&nbsp;&nbsp;Fault Ticket</a></li>
                            </ul>
                        </li>
                        <li class="dropdown dark-menu">
                            <a href="#" data-toggle="dropdown" role="button">Uploads</a>
                            <ul class="dropdown-menu">
                                <li><a href="/upload/tickets"><i class="fas fa-ticket-alt"></i>&nbsp;&nbsp;New Faults Tickets</a></li>
                                <li><a href="/upload/mprns"><i class="fas fa-tachometer-alt"></i>&nbsp;&nbsp;New Meter Points</a></li>
                                <li><a href="/upload/cancellations"><i class="fas fa-ban"></i>&nbsp;&nbsp;Bulk Cancellations</a></li>
                                <li><a href="/upload/updateTickets"><i class="fas fa-edit"></i>&nbsp;&nbsp;Update Tickets</a></li>
                                
                            </ul>
                        </li>
                        <li class="dropdown dark-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Reports</a>
                            <ul class="dropdown-menu">
                                <li><a href="/reports"><i class="fas fa-database"></i>&nbsp;&nbsp;Report Builder</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                
            <!-- Right Hand Navigation Bar -->
                <div>
                    <ul class="nav navbar-nav navbar-right right-spacer">
                        <% if(currentUser){ %>
                            <li class="nav-item nav-link"><a class=nav-link><i class="fas fa-user fa-lg"></i> <%= currentUser.firstName  %> <%=currentUser.lastName %></a></li>
                            <% if(currentUser.isAdmin){ %>
                                <li class="nav-item"><a class="nav-link" href="/register">Create User</a></li>
                            <% } %>
                            <li class="nav-item"><a class="nav-link" href="/logout"><i class="settings icon"></i> Log Out</a></li>
                        <% } else { %>
                            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                        <% } %>
                    </ul>
                </div>
        	</nav>
        </div>
    
    <!-- Flash Messages -->

    <div class="container boardMessages boxed">
        <% if(error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert"><strong><%- error %> </strong></div>
        <% } %>
        <% if(success && success.length > 0) { %>
            <div class="alert alert-success" role="alert"><strong><%- success %></strong></div>
        <% } %>
        <% if(confirm && confirm.length > 0) { %>
            <div class="alert alert-warning" role="alert"><strong><%- confirm %></strong></div>
        <% } %>
    </div>
