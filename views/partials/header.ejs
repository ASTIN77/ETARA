<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv=”X-UA-Compatible” content=”IE=edge”>
        <meta name="viewport" content="width=device-width" initial-scale="1">
        <title>ARTTA - AMR Repair & Trouble Ticketing Archive</title>
        <meta name="description" content="AMR Portal of SMS Plc" />
    	<meta property="og:url"           content="https://sherlock.astechit.net" />
    	<meta property="og:type"          content="website" />
    	<meta property="og:title"         content="ΔrTTa - Data Management AMR Portal" />
    	<meta property="og:description"   content="AMR Portal of SMS Plc" />
    	<meta property="og:image"         content="/images/coding.jpg" />
    	<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    	<link rel="icon" href="/images/favicon.ico" type="image/x-icon" /> 
    	<link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
    	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    	<link href="https://fonts.googleapis.com/css?family=Raleway:400,700" rel="stylesheet" >
    	<script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    	<link rel="stylesheet" href="/stylesheets/main.css" />
    	<script src="/javascripts/main.js" type="text/javascript"></script>
    </head>
    
    <body>
    
        <div class="container dmHeader">
        	<nav class="navbar navbar-default navbar-fixed-top">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#"><i class="fas fa-sitemap fa-lg"></i> ARTTA</a>
                </div>
    
            <!-- Main Navigation Bar -->
                <div class="myNavbar">
                    <ul class="nav navbar-nav">
                    	<li class="nav-item"><a class="nav-link" href="/">Search</a></li>
                        <li class="nav-item"><a class="nav-link" href="/tickets">New</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Upload</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Export</a></li>
                        
                    </ul>
                </div>
                
            <!-- Right Hand Navigation Bar -->
                <div>
                    <ul class="nav navbar-nav navbar-right">
                        <% if(currentUser){ %>
                            <li class="nav-item nav-link"><a class=nav-link><i class="fas fa-user fa-lg"></i> <%= currentUser.username  %></a></li>
                            <% if(currentUser.isAdmin){ %>
                                <li class="nav-item"><a class="nav-link" href="/register">Create User</a></li>
                            <% } %>
                            <li class="nav-item"><a class="nav-link" href="/logout"><i class="settings icon"></i> Log Out</a></li>
                        <% } else { %>
                            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                        <% } %>
                        <li class="nav-item"><a class="nav-link" href="/">Help</a></li>
                    </ul>
                </div>
        	</nav>
        </div>
    
    <!-- Flash Messages -->

    <div class="container boardMessages">
        <% if(error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert"><%= error %></div>
        <% } %>
        <% if(success && success.length > 0) { %>
            <div class="alert alert-success" role="alert"><%= success %></div>
        <% } %>
        <% if(confirm && confirm.length > 0) { %>
            <div class="alert alert-warning" role="alert"><%= confirm %></div>
        <% } %>
    </div>
